#echo -e " ${z}â”‚$NC$r â€¢ $NC${z} Uptime Server ${NC} ${z}=$NC $SERONLINE${NC}"
#echo -e " ${z}â”‚$NC$r â€¢ $NC${z} Date ${NC}          ${z}=$NC $DATEVPS${NC}"
#echo -e " ${z}â”‚$NC$r â€¢ $NC${z} Time ${NC}          ${z}=$NC $TIMEZONE${NC}"


echo -e " ${z}â•°â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•¯${NC}"
echo -e "                  ${KIRI} ${purple}YOUR ACCOUNT ON VPS${NC} ${KANAN}"
echo -e "        ${z}â’â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â’${NC}"
echo -e "              ${z}SSH/OPENVPN${NC}    $yâ¤$NC $ssh1${NC}" "$a"
echo -e "              VMESS/WS/GRPC${NC}  $yâ¤$NC $vma$NC" "$a"
echo -e "              VLESS/WS/GRPC${NC}  $yâ¤$NC $vla$NC" "$a"
echo -e "              TROJAN/WS/GRPC${NC} $yâ¤$NC $trb${NC} $a"
echo -e "              SHADOWSOCKS/WS/GRPC${NC} $yâ¤$NC $ssa${NC} $a"
echo -e "        ${z}â’â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â’${NC}" 
echo -e "                  ${KIRI}${z} Zero Tunneling ${z}${KANAN}"
echo -e " ${z}â•­â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•®â•­â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•®â•­â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•®${NC}"
echo -e " ${z}â”‚ ${NC}${z} SSH$NC : $status_ssh" "        ${z} NGINX$NC : $status_nginx" "        ${z} XRAY$NC : $status_xray      $NC${z}â”‚$NC" 
echo -e " ${z}â”‚ ${NC}${z} WS-ePRO$NC : $status_ws_epro" "    ${z} DROPBEAR$NC : $status_dropbear" "     ${z} HAPROXY$NC : $status_haproxy   $NC${z}â”‚$NC" 
echo -e " ${z}â•°â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•¯â•°â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•¯â•°â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•¯${NC}"
echo -e " ${z}â•­â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•®${NC}"
echo -e " \033[36mâ”‚$NC   [${green}01${NC}] MENU SSH            ${z}â”‚$NC   [${green}06${NC}] MENU SYSTEM ${z}         â”‚$NC" 
echo -e " \033[36mâ”‚$NC   [${green}02${NC}] MENU VMESS          ${z}â”‚$NC   [${green}07${NC}] Check Bandwith      ${z} â”‚$NC"    
echo -e " \033[36mâ”‚$NC   [${green}03${NC}] MENU VLESS          ${z}â”‚$NC   [${green}08${NC}] SPEEDTEST   ${z}         â”‚$NC"  
echo -e " \033[36mâ”‚$NC   [${green}04${NC}] MENU TROJAN         ${z}â”‚$NC   [${green}09${NC}] LIMIT SPEED ${z}         â”‚$NC"
echo -e " \033[36mâ”‚$NC   [${green}05${NC}] MENU SHADOW         ${z}â”‚$NC   [${green}10${NC}] BACKUP/RESTORE ${z}      â”‚$NC"
echo -e " ${z}â•°â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•¯${NC}"
echo -e " ${z}â•­â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•®${NC}"
echo -e " ${z}â”‚$NC${z} Version$NC       ${z}=$NC V2.9"
echo -e " ${z}â”‚$NC${z} ID$NC            ${z}=$NC $username"
echo -e " ${z}â”‚$NC${z} Script Status$NC ${z}=$NC $sts "
